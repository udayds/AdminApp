<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccessControl">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:text="User Role Mapping"
        android:textColor="@color/startblue"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:weightSum="100">


        <Spinner
            android:id="@+id/spinner_select_user"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="50" />

        <Spinner
            android:id="@+id/spinner_select_role"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="50" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Complaints"
        android:textColor="@color/endblue"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:orientation="horizontal"
        android:weightSum="100">
    <CheckBox
        android:id="@+id/checkBox_Lift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="20"
        android:text="Lift" />
        <CheckBox
            android:id="@+id/checkBox_Sewage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="209dp"
            android:layout_weight="20"
            android:text="Sewage" />
        <CheckBox
            android:id="@+id/checkBox_Water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="209dp"
            android:layout_weight="20"
            android:text="Water" />
        <CheckBox
            android:id="@+id/checkBox_Garbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="209dp"
            android:layout_weight="20"
            android:text="Garbage" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <CheckBox
            android:id="@+id/checkBox_Parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="20"
            android:text="Parking" />
        <CheckBox
            android:id="@+id/checkBox_Electrical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_weight="20"
            android:text="Electrical" />
        <CheckBox
            android:id="@+id/checkBox_Gardening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="20"
            android:text="Gardening" />
        <CheckBox
            android:id="@+id/checkBox_Security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="20"
            android:text="Security" />
    </LinearLayout>

    <Button
        android:id="@+id/Next_Button_Access_Control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="463dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/buttonstyle"
        android:text="Next"
        android:textColor="#fff" />


</RelativeLayout>